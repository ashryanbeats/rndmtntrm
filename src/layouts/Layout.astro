---
// Import styles
import "../styles/index.css";

// Props
const { title = "RANDOM TANTRUM" } = Astro.props;

// Generate canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Check for "ref" param in URL
const searchParams = new URL(Astro.url, Astro.site).searchParams;
const hasRefParam = searchParams.has("ref");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Use relative paths for consistent behavior across environments -->
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <link
      rel="preload"
      href="fonts/Vaticanus-G3yVG.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    {hasRefParam && <meta name="robots" content="noindex, follow" />}
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
