---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 | RANDOM TANTRUM">
  <main>
    <h1>4<span class="glitch">0</span>4</h1>
    <div class="message">
      <p>TANTRUM REDIRECTED</p>
      <a href="/">RETURN TO CHAOS</a>
    </div>
  </main>
</Layout>

<style>
  main {
    font-family: "Vaticanus", sans-serif;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    gap: 2rem;
  }

  h1 {
    font-size: clamp(8rem, 25vw, 15rem);
    line-height: 0.8;
    margin: 0;
    position: relative;
    letter-spacing: -0.05em;
  }

  .glitch {
    animation: glitch 1s infinite linear alternate-reverse;
    display: inline-block;
    position: relative;
    transform: translateZ(0);
  }

  @keyframes glitch {
    0% {
      transform: translate(0);
    }
    20% {
      transform: translate(-5px, 5px);
      color: var(--primary-color);
    }
    40% {
      transform: translate(-5px, -5px);
    }
    60% {
      transform: translate(5px, 5px);
      color: var(--primary-color);
    }
    80% {
      transform: translate(5px, -5px);
    }
    100% {
      transform: translate(0);
    }
  }

  .message {
    text-align: center;
    border: 2px solid black;
    padding: 1.5rem;
    max-width: 500px;
    width: 100%;
  }

  .message p {
    margin: 0 0 1.5rem;
    font-size: 1.5rem;
  }

  a {
    display: inline-block;
    color: white;
    background-color: black;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-size: 1.2rem;
    transition: all 0.2s;
  }

  a:hover {
    background-color: var(--primary-color);
    transform: scale(1.05);
  }
</style>
