---
import Layout from "../layouts/Layout.astro";
import GlitchText from "../components/GlitchText";
---

<Layout title="RANDOM TANTRUM">
  <main class="rt-text main-container">
    <h1 class="rt-heading heading-lg">
      <GlitchText text="RANDOM" client:load /><br /><GlitchText
        text="TANTRUM"
        client:load
      />
    </h1>

    <div class="grid">
      <a
        href="https://www.collxn.com"
        class="box"
        target="_blank"
        rel="noopener">Collxn</a
      >
    </div>
  </main>

  <footer class="rt-text site-footer">
    <div id="copyright"></div>
  </footer>
</Layout>

<script>
  const updateCopyright = () => {
    const currentYear = new Date().getFullYear();
    const element = document.getElementById("copyright");

    if (!element) return;

    if (currentYear <= 2025) {
      element.textContent = "(c) 2025 Random Tantrum, LLC";
    } else {
      element.textContent = `(c) 2025â€“${currentYear} Random Tantrum, LLC`;
    }
  };

  // Run on page load
  updateCopyright();

  // Also update on New Year if page is kept open
  setInterval(
    () => {
      updateCopyright();
    },
    1000 * 60 * 60
  ); // Check every hour
</script>
